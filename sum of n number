import java.util.Scanner;
public class main 
{
    public static void main(String[] args)
    {
        Scanner sc = new Scanner (System.in);
        System.out.println("Enter range: ");
       int n = sc.nextInt();
       float sum = 0;
       for (int i=1;i<=n;i++)
       {
           sum=sum+i;
       }
        System.out.println(sum);
    }
}
